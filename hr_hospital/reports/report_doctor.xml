<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_doctor" name="Doctor report">
        <div t-call="web.html_container">
            <div class="page">

                <t t-set="company" t-value="user.company_id"/>
                <img t-att-src="image_data_uri(company.logo)"
                     t-att-alt="company.name" height="120"/>

                <t t-foreach="docs" t-as="doc">
                    <H2>
                        <span>Doctor:</span>
                        <span t-field="doc.name"/>
                    </H2>
                    <div>
                        <strong>Specialization:</strong>
                        <span t-field="doc.specialization"/>
                    </div>
                    <div>
                        <strong>Phone:</strong>
                        <span t-field="doc.phone"/>
                    </div>

                    <!--                    Visits-->
                    <div>
                        <div>
                            <H4 align="center">Visits</H4>
                        </div>
                        <table class='table_boarded'
                               style='border: 1px solid black; width: 80%'
                               align='center' border='2'>
                            <tbody>
                                <tr>
                                    <th style='border: 1px solid black'>
                                        Visit
                                    </th>
                                    <th style='border: 1px solid black'>
                                        Visit date
                                    </th>
                                    <th style='border: 1px solid black'>
                                        Patient
                                    </th>
                                    <th style='border: 1px solid black'>
                                        Status
                                    </th>
                                </tr>
                                <t t-set="doc_visit_history"
                                   t-value="doc.visit_ids.sorted(key='fact_date', reverse=True)"/>
                                <t t-foreach="doc_visit_history" t-as="visit">
                                    <tr>
                                        <td>
                                            <span t-field="visit.display_name"/>
                                        </td>
                                        <td>
                                            <span t-field="visit.fact_date"/>
                                        </td>
                                        <td>
                                            <span t-field="visit.patient_id"/>
                                        </td>
                                        <td>
                                            <span t-field="visit.status"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <br/>
                    <br/>
                    <H4 align="center">Doctors patients</H4>
                    <table class='table_boarded'
                           style='border: 1px solid black; width: 80%'
                           align='center' border='2'>
                        <tbody>
                            <tr>
                                <th style='border: 1px solid black'>
                                    Patient
                                </th>
                                <th style='border: 1px solid black'>
                                    Gender
                                </th>
                                <th style='border: 1px solid black'>
                                    Phone
                                </th>
                                <th style='border: 1px solid black'>
                                    Birth date
                                </th>
                                <th style='border: 1px solid black'>
                                    Visit status
                                </th>
                            </tr>
                            <t t-foreach="doc.patient_ids" t-as="patient">
                                <tr>
                                    <td>
                                        <span t-out="patient.name"/>
                                    </td>
                                    <td>
                                        <span t-out="patient.gender"/>
                                    </td>
                                    <td>
                                        <span t-out="patient.phone"/>
                                    </td>
                                    <td>
                                        <span t-out="patient.birth_date"/>
                                    </td>
                                    <t t-set="cell_color">
                                        <t t-if="patient.last_visit_status == 'planned'">#FFDE4D</t>
                                        <t t-if="patient.last_visit_status == 'finished'">#80AF81</t>
                                        <t t-if="patient.last_visit_status == 'canceled'">#FF7777</t>
                                        <t t-if="patient.last_visit_status not in ['planned', 'finished', 'canceled']">#758694</t>
                                    </t>
<!--                                    <t t-set="cell_color">#FFFF99</t>-->
                                    <td t-attf-style="background-color: {{cell_color}}">
                                        <span t-out="patient.last_visit_status"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>

                <br/>
                <div>
                    <strong>Report date:</strong>
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H-%M-%S')"/>
                    <br/>
                    <strong>Adress:</strong>
                    <span t-field="user.company_id.street"/>
                </div>
            </div>
        </div>
    </template>

    <record id="action_report_doctor" model="ir.actions.report">
        <field name="name">Doctor</field>
        <field name="model">hospital.doctor</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hr_hospital.report_doctor</field>
        <field name="report_file">hr_hospital.report_doctor</field>
        <field name="print_report_name">object.name</field>
        <field name="binding_model_id" ref="model_hospital_doctor"/>
        <field name="binding_type">report</field>
    </record>

    <record id="paperformat_A4_portrait" model="report.paperformat">
        <field name="name">A4 portrait</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">100</field>
    </record>

