<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Vizard form-->
    <record id="disease_report_wizard_view_form" model="ir.ui.view">
        <field name="name">disease.report.wizard.view.form"</field>
        <field name="model">disease.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
<!--                    <field name="start_date" widget="daterange" options="{'end_date_field' : 'end_date'}"/>-->
                    <!--                    <field name="end_date" widget="daterange" options="{'start_date_field' : 'start_date'}"/>-->
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="doctor_ids" widget="many2many_tags"/>
                    <field name="disease_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_create_report"
                            string="Create report"
                            type="object"
                            class="btn-secondary"/>
                    <button special="cancel" class="btn-primary" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--    Action opens wizard form: from code-->
    <record id="server_action_disease_report_wizard" model="ir.actions.server">
        <field name="name">Disease report</field>
        <field name="model_id" ref="model_disease_report_wizard"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_open_wizard()
        </field>
    </record>


<!--    Action opens wizard form: standard-->
    <record id="action_disease_monthly_report_wizard" model="ir.actions.act_window">
        <field name="name">Disease report</field>
        <field name="res_model">disease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_hospital.model_hospital_doctor"/>
        <field name="binding_view_types">form,tree</field>
        <field name="binding_type">report</field>
    </record>
</odoo>
