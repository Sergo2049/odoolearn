<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Vizard form-->
    <record id="assign_doctor_multi_wizard_view_form" model="ir.ui.view">
        <field name="name">assign.doctor.multi.wizard.view.form</field>
        <field name="model">assign.doctor.multi.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="doctor_id"/>
                </group>
                <footer>
                    <button name="action_assign"
                            string="Assign doctor"
                            type="object"
                            class="btn-secondary"/>
                    <button special="cancel" class="btn-primary" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

<!--    Action opens wizard form-->
    <record id="action_assign_doctor_multi_wizard" model="ir.actions.act_window">
        <field name="name">Assign doctor</field>
        <field name="res_model">assign.doctor.multi.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_hospital.model_hospital_patient"/>
        <field name="binding_view_types">tree</field>
        <field name="binding_type">action</field>
    </record>

</odoo>