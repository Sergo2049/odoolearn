<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Diagnosis-->
    <record id="diagnosis_view_form" model="ir.ui.view">
        <field name="name">hospital.diagnosis.view.form</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="visit_id"/>
                    <field name="doctor_id"/>
                    <field name="description"/>
                    <field name="approved" visible="doctor_id.is_intern = True"/>
                    <field name="disease_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="diagnosis_view_tree" model="ir.ui.view">
        <field name="name">hospital.diagnosis.view.tree</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="visit_id"/>
                <field name="doctor_id"/>
                <field name="disease_id"/>
                <field name="description"/>
                <field name="approved"/>
            </tree>
        </field>
    </record>

    <record id="diagnosis_view_graph" model="ir.ui.view">
        <field name="name">hospital.diagnosis.view.graph</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <graph string="Disease statistic">
                <field name="disease_id"/>
                <field name="create_date" interval="month"/>
            </graph>
        </field>
    </record>
    <record id="diagnosis_view_pivot" model="ir.ui.view">
        <field name="name">hospital.diagnosis.view.pivot</field>
        <field name="model">hospital.diagnosis</field>
        <field name="arch" type="xml">
            <pivot string="Disease statistic">
                <field name="disease_id" type="row"/>
                <field name="create_date" type="col" interval="month"/>
            </pivot>
        </field>
    </record>

    <record id="action_hospital_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnosis</field>
        <field name="res_model">hospital.diagnosis</field>
        <field name="view_mode">tree,form,graph,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new diagnosis.
            </p>
        </field>
    </record>
</odoo>
