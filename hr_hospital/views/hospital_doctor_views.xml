<!--                                                                    <a role="menuitem"-->
<!--                                                                       type="edit"-->
<!--                                                                       class="dropdown-item">Edit-->
<!--                                                                    </a>-->
<!--                                                                </t>-->
<!--                                                                <t t-if="widget.deletable">-->
<!--                                                                    <a role="menuitem"-->
<!--                                                                       type="delete"-->
<!--                                                                       class="dropdown-item">-->
<!--                                                                        Delete-->
<!--                                                                    </a>-->
<!--                                                                </t>-->
<!--                                                                  <ul class="oe_kanban_colorpicker"-->
<!--                                                                        data-field="color"/>-->
<!--                                                            </div>-->
<!--                                                        </div>-->
<!--                                                    </div>-->
                                                    <div>
                                                        <field name="specialization"/>
                                                    </div>
                                                    <div>
                                                        <field name="intern_ids"/>
                                                    </div>
