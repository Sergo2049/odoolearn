<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Doctor-->
    <record id="doctor_view_form" model="ir.ui.view">
        <field name="name">hospital.doctor.view.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="get_diagnosis_to_approve"
                            string="Diagnosis to approve" type="object"/>
                </header>
                <div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="gender" widget="radio"
                                   options="{'horizontal' : True}"/>
                            <field name="specialization"/>
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   readonly="is_intern != True"/>
                        </group>
                        <group>
                            <field name="image_256" widget="image"
                                   class="oe_avatar" nolabel="1"/>
                        </group>
                    </group>
                </div>
                <div>
                    <group label="Interns" invisible="is_intern">
                        <field name="intern_ids">
                            <kanban class="o_kanban_mobile">
                                <field name="name"/>
                                <field name="phone"/>
                                <field name="specialization"/>
                                <field name="gender"/>

                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                            <div class="oe_kanban_details">
                                                <strong class="o_kanban_record_title">
                                                    <field name="name"/>
                                                </strong>
                                                <div>
                                                    <field name="specialization"/>
                                                </div>
                                                <div>
                                                    <field name="phone"/>
                                                </div>
                                                <div>
                                                    <field name="gender"
                                                           options="{'widget': 'selection'}"/>
                                                </div>
                                                <div>
                                                    <field name="mentor_id"/>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>
                </div>
            </form>
        </field>
    </record>

    <record id="doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.view.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image_256" widget="image" class="oe_avatar"
                       nolabel="1"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="specialization"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="hospital_doctor_view_kanban" model="ir.ui.view">
        <field name="name">hospital.doctor.view.kanban</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" string="Doctors"
                    default_group_by="specialization">
                <field name="name"/>
                <field name="phone"/>
                <field name="specialization"/>
                <field name="gender"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="specialization"/>
                                </div>
                                <div>
                                    <field name="phone"/>
                                </div>
                                <div>
                                    <field name="gender"
                                           options="{'widget': 'selection'}"/>
                                </div>
                                <div>
                                    <field name="mentor_id"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="doctor_view_search" model="ir.ui.view">
        <field name="name">hospital.doctor.view.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <filter name="filter_mentors" string="Mentors" domain="[('is_intern','=', False)]"/>
                <filter name="filter_interns" string="Interns" domain="[('is_intern','=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new doctor.
            </p>
        </field>
    </record>
</odoo>
