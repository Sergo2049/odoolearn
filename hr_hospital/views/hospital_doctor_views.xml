<?xml version="1.0" encoding="utf-8"?>
<odoo>
        Doctor
    <record id="doctor_view_form" model="ir.ui.view">
        <field name="name">hospital.doctor.view.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="phone"/>
                    <field name="gender" widget="radio" options="{'horizontal' : True}"/>
                    <field name="specialization"/>
                    <field name="is_intern"/>
                     <field name="mentor_id"  readonly="is_intern != True"/>
                </group>
                <group>
                    <field name="image_256" widget="image" class="oe_avatar"/>
                </group>
            </form>
        </field>
    </record>

    <record id="doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.view.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image_256" widget="image" class="oe_avatar"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="specialization"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new doctor.
            </p>
        </field>
    </record>
</odoo>
