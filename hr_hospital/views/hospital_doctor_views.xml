                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.view.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image_256" widget="image" class="oe_avatar"
                       nolabel="1"/>
                <field name="name"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="specialization"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="hospital_doctor_view_kanban" model="ir.ui.view">
        <field name="name">hospital.doctor.view.kanban</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" string="Doctors"
                    default_group_by="specialization">
                <progressbar field="gender"
                             colors='{"male": "success", "female":"danger"}'/>
                <field name="name"/>
                <field name="image_256"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="id"/>
                <field name="intern_ids"/>
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable">
                            <a role="menuitem" type="edit"
                               class="dropdown-item">Edit
                            </a>
                        </t>
                        <t t-if="widget.deletable">
                            <a role="menuitem" type="delete"
                               class="dropdown-item">Delete
                            </a>
                        </t>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div>
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="specialization"/>
                                </div>
                                <div>
                                    <strong>Phone:</strong>
                                    <field name="phone"/>
                                </div>
                                <div>
                                    <strong>Gender:</strong>
                                    <field name="gender"
                                           options="{'widget': 'selection'}"/>
                                </div>
                                <div t-if="record.is_intern.raw_value">
                                    <strong>Mentor:</strong>
                                    <field name="mentor_id"
                                           widget="many2one_avatar_user"/>
                                </div>
                                <div t-if="!record.is_intern.raw_value">
                                    <strong>Interns:</strong>
                                    <field name="intern_ids"
                                           widget="many2many_tags"/>
                                </div>
                                <div>
                                    <button name="action_create_visit"
                                            display="always"
                                            string="Create visit" type="object"
                                            class="btn-primary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="doctor_view_search" model="ir.ui.view">
        <field name="name">hospital.doctor.view.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <filter name="filter_mentors" string="Mentors"
                        domain="[('is_intern','=', False)]"/>
                <filter name="filter_interns" string="Interns"
                        domain="[('is_intern','=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new doctor.
            </p>
        </field>
    </record>
</odoo>
