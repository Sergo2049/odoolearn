<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Doctor-->
    <record id="doctor_view_form" model="ir.ui.view">
        <field name="name">hospital.doctor.view.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="get_diagnosis_to_approve"
                            string="Diagnosis to approve" type="object"
                            invisible="is_intern"/>
                </header>
                <div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="gender" widget="radio"
                                   options="{'horizontal' : True}"/>
                            <field name="specialization"/>
                            <field name="is_intern"/>
                            <field name="mentor_id"
                                   readonly="not is_intern"
                                   invisible="not is_intern"/>
                        </group>
                        <group>
                            <field name="image_256" widget="image"
                                   class="oe_avatar" nolabel="1"/>
                        </group>
                    </group>
                </div>
                <notebook>
                    <page string="Visits">
                        <field name="visit_ids" nolabel="1"/>
                    </page>
                    <page string="Patients">
                        <field name="patient_ids"
                               readonly="True"/>
                    </page>
                    <page string="Interns" invisible="is_intern">
                            <field name="intern_ids" string="Interns" nolabel="1">
                                <kanban class="o_kanban_mobile"
                                        group_edit="False">
                                    <field name="name"/>
                                    <field name="specialization"/>
                                    <field name="intern_ids"/>

                                    <templates>
                                        <t t-name="kanban-menu">
                                            <t t-if="widget.editable">
                                                <a role="menuitem" type="edit"
                                                   class="dropdown-item">Edit
                                                </a>
                                            </t>
                                            <t t-if="widget.deletable">
                                                <a role="menuitem" type="delete"
                                                   class="dropdown-item">Delete
                                                </a>
                                            </t>
                                        </t>
                                        <t t-name="kanban-box">
                                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                                <div class="oe_kanban_details">
                                                    <strong class="o_kanban_card_header_title">
                                                        <field name="name"/>
                                                    </strong>

<!--                                                    <div class="o_dropdown_kanban dropdown">-->
<!--&lt;!&ndash;                                                        <a class="dropdown-toogle btn"&ndash;&gt;-->
<!--&lt;!&ndash;                                                           data-toogle="dropdown" href="#">&ndash;&gt;-->
<!--&lt;!&ndash;                                                           <span aria-hidden="True"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                                        </a>&ndash;&gt;-->
