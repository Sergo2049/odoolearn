<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Patient-->
    <record id="patient_view_form" model="ir.ui.view">
        <field name="name">hospital.patient.view.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="phone"/>
                    <field name="gender"/>
                </group>
                <group>
                    <field name="image_256" widget="image" class="oe_avatar"/>
                </group>
            </form>
        </field>
    </record>

    <record id="patient_view_tree" model="ir.ui.view">
        <field name="name">hospital.patient.view.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image_256" widget="image" class="oe_avatar"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="phone"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new patient.
            </p>
        </field>
    </record>

    <!--    Doctor-->
    <record id="doctor_view_form" model="ir.ui.view">
        <field name="name">hospital.doctor.view.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="phone"/>
                    <field name="gender"/>
                    <field name="specialization"/>
                </group>
                <group>
                    <field name="image_256" widget="image" class="oe_avatar"/>
                </group>
            </form>
        </field>
    </record>

    <record id="doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.view.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image_256" widget="image" class="oe_avatar"/>
                <field name="name"/>
                <field name="surname"/>
                <field name="phone"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new doctor.
            </p>
        </field>
    </record>

    <!--    Visit-->
    <record id="visit_view_tree" model="ir.ui.view">
        <field name="name">hospital.visit.tree</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="patient"/>
                <field name="disease"/>
            </tree>
        </field>
    </record>

    <record id="visit_view_form" model="ir.ui.view">
        <field name="name">hospital.visit.form</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="patient"/>
                <field name="disease"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_visit" model="ir.actions.act_window">
        <field name="name">Visit</field>
        <field name="res_model">hospital.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new visit.
            </p>
        </field>
    </record>

    <!--    Menus-->
    <menuitem
            id="hospital_menu_root"
            name="Hospital"
            sequence="200"/>

    <menuitem
            id="patient_menu"
            name="Patient"
            parent="hospital_menu_root"
            action="action_hospital_patient"
            sequence="201"/>

    <menuitem
            id="doctor_menu"
            name="Doctor"
            parent="hospital_menu_root"
            action="action_hospital_doctor"
            sequence="201"/>

    <menuitem
            id="visit_menu"
            name="Visit"
            parent="hospital_menu_root"
            action="action_hospital_visit"
            sequence="201"/>
</odoo>
