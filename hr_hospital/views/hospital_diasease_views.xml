<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Disease-->
    <record id="disease_view_form" model="ir.ui.view">
        <field name="name">hospital.disease.view.form</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="parent_id"/>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="disease_view_tree" model="ir.ui.view">
        <field name="name">hospital.disease.view.tree</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <tree>
                    <field name="parent_id"/>
                    <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="disease_view_search" model="ir.ui.view">
        <field name="name">hospital.disease.view.search</field>
        <field name="model">hospital.disease</field>
        <field name="arch" type="xml">
            <search>
                <searchpanel>
                    <field name="parent_id" hierarchize="True"/>
                </searchpanel>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_hospital_disease" model="ir.actions.act_window">
        <field name="name">Disease</field>
        <field name="res_model">hospital.disease</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new disease.
            </p>
        </field>
    </record>
</odoo>
