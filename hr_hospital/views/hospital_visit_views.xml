<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Visit-->
    <record id="hospital_visit_view_form" model="ir.ui.view">
        <field name="name">hospital.visit.view.form</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"
                           options="{'clickable': '1'}"/>
                </header>
                <group>
                    <field name="patient_id"/>
                    <field name="doctor_id" readonly="status == 'finished'"/>
                    <field name="planned_start_date"/>
                    <field name="planned_end_date"/>
                    <field name="fact_date"/>
                    <field name="is_intern"/>
                    <field name="diagnosis_ids"/>
                </group>
            </form>
        </field>
    </record>

    <record id="hospital_visit_view_tree" model="ir.ui.view">
        <field name="name">hospital.visit.view.tree</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="status"/>
                <field name="planned_start_date"/>
            </tree>
        </field>
    </record>
    <record id="hospital_visit_view_calendar" model="ir.ui.view">
        <field name="name">hospital.visit.view.calendar</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <calendar date_start="planned_start_date"
                date_stop="planned_end_date"
                event_open_popup="True" color="doctor_id" mode="week">
                <field name="patient_id" filters="1"/>
                <field name="doctor_id" filters="1"/>
                <field name="status"/>
                <field name="planned_start_date"/>
            </calendar>
        </field>
    </record>
    <record id="hospital_visit_view_search" model="ir.ui.view">
        <field name="name">hospital.visit.view.search</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <search>
                <field name="patient_id" string="Patient"
                       operator="ilike"/>
                <field name="doctor_id" string="Doctor"
                       operator="ilike"/>
                <filter string="Archived" name="inactive"
                        domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Interns visit" name="inactive"
                        domain="[('is_intern', '=', True)]"/>
                <group expand="0" string="Group by">
                    <filter string="Status" name="group_by_status"
                                context="{'group_by': 'status'}"/>
                </group>
                <searchpanel>
                    <field name="doctor_id" select="multi"
                           enable_counters="1" icon="fa-users" domain="[]"/>
                    <field name="status"  icon="fa-building"/>
                </searchpanel>
            </search>
        </field>
    </record>
    <record id="hospital_visit_view_pivot" model="ir.ui.view">
        <field name="name">hospital.visit.view.pivot</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <pivot disable_linking="0" display_quantity="1" default_order="planned_start_date desc">
                <field name="doctor_id" string="Doctor" type="row"/>
                <field name="status" string="Status" type="col"/>
            </pivot>
<!--            <search>-->
<!--                <field name=    <record id="action_visit_history" model="ir.actions.act_window">
           <field name="name">Visit</field>
        <field name="res_model">hospital.visit</field>
        <field name="view_mode">form</field>
    </record>"planned_start_date" filter_domain="[('planned_start_date', '>=')]"/>-->
<!--            </search>-->
        </field>
    </record>
    <record id="action_hospital_visit" model="ir.actions.act_window">
        <field name="name">Visit</field>
        <field name="res_model">hospital.visit</field>
        <field name="view_mode">tree,form,calendar,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new visit.
            </p>
        </field>
    </record>
</odoo>
