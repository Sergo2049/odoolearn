<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Visit-->
    <record id="visit_view_form" model="ir.ui.view">
        <field name="name">hospital.visit.form</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="status"/>
                    <field name="patient_id"/>
                    <field name="doctor_id" readonly="status == 'finished'"/>
                    <field name="planned_date"/>
                    <field name="fact_date"/>
                    <field name="diagnosis_ids"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="visit_view_tree" model="ir.ui.view">
        <field name="name">hospital.visit.tree</field>
        <field name="model">hospital.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="patient_id"/>
                <field name="status"/>
                <field name="planned_date"/>
            </tree>
        </field>
    </record>

    <record id="action_hospital_visit" model="ir.actions.act_window">
        <field name="name">Visit</field>
        <field name="res_model">hospital.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new visit.
            </p>
        </field>
    </record>
</odoo>
